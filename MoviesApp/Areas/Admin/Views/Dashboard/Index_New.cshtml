@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .dashboard-container {
        background: #f8f9fa;
        min-height: 100vh;
        padding: 2rem 0;
    }

    .welcome-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 3rem 0;
        border-radius: 1rem;
        margin-bottom: 2rem;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .welcome-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .welcome-subtitle {
        font-size: 1.2rem;
        opacity: 0.9;
    }

    .stats-overview {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .dashboard-card {
        background: white;
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-left: 5px solid #3498db;
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .dashboard-card.movies { border-left-color: #3498db; }
    .dashboard-card.users { border-left-color: #2ecc71; }
    .dashboard-card.reviews { border-left-color: #f39c12; }
    .dashboard-card.views { border-left-color: #e74c3c; }

    .card-header {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }

    .card-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        font-size: 1.5rem;
        color: white;
    }

    .card-icon.movies { background: #3498db; }
    .card-icon.users { background: #2ecc71; }
    .card-icon.reviews { background: #f39c12; }
    .card-icon.views { background: #e74c3c; }

    .card-info h3 {
        font-size: 2.2rem;
        font-weight: 700;
        margin: 0;
        color: #2c3e50;
    }

    .card-info p {
        margin: 0;
        color: #6c757d;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .card-actions {
        margin-top: 1rem;
        text-align: right;
    }

    .card-link {
        color: #3498db;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem;
    }

    .card-link:hover {
        color: #2980b9;
    }

    .quick-actions {
        background: white;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        margin-bottom: 2rem;
    }

    .quick-actions h4 {
        color: #2c3e50;
        margin-bottom: 1.5rem;
        font-weight: 600;
    }

    .action-buttons {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    .action-btn {
        display: flex;
        align-items: center;
        padding: 1rem;
        border: 2px solid #e9ecef;
        border-radius: 0.75rem;
        text-decoration: none;
        color: #495057;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }

    .action-btn:hover {
        background: #3498db;
        color: white;
        border-color: #3498db;
        transform: translateY(-2px);
    }

    .action-btn i {
        font-size: 1.5rem;
        margin-right: 1rem;
        width: 40px;
        text-align: center;
    }

    .recent-activity {
        background: white;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .activity-item {
        display: flex;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid #e9ecef;
    }

    .activity-item:last-child {
        border-bottom: none;
    }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        font-size: 1rem;
        color: white;
        background: #6c757d;
    }

    .activity-content {
        flex: 1;
    }

    .activity-title {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.25rem;
    }

    .activity-time {
        font-size: 0.8rem;
        color: #6c757d;
    }

    .system-status {
        background: white;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        margin-top: 2rem;
    }

    .status-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
        border-bottom: 1px solid #e9ecef;
    }

    .status-item:last-child {
        border-bottom: none;
    }

    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .status-badge.online {
        background: #d4edda;
        color: #155724;
    }

    .status-badge.warning {
        background: #fff3cd;
        color: #856404;
    }
</style>

<div class="dashboard-container">
    <div class="container-fluid">
        <!-- Welcome Section -->
        <div class="welcome-section">
            <div class="container">
                <h1 class="welcome-title">
                    <i class="fas fa-tachometer-alt me-3"></i>
                    Chào mừng đến với Admin Dashboard
                </h1>
                <p class="welcome-subtitle">
                    Quản lý hệ thống CCFilm một cách hiệu quả và chuyên nghiệp
                </p>
                <p class="mb-0">
                    <i class="fas fa-calendar-alt me-2"></i>
                    Hôm nay: @DateTime.Now.ToString("dddd, dd/MM/yyyy", new System.Globalization.CultureInfo("vi-VN"))
                </p>
            </div>
        </div>

        <!-- Statistics Overview -->
        <div class="stats-overview">
            <div class="dashboard-card movies">
                <div class="card-header">
                    <div class="card-icon movies">
                        <i class="fas fa-film"></i>
                    </div>
                    <div class="card-info">
                        <h3>1,247</h3>
                        <p>Tổng số phim</p>
                    </div>
                </div>
                <div class="card-actions">
                    <a href="@Url.Action("Movies", "SimpleAdmin", new { area = "Admin" })" class="card-link">
                        Quản lý phim <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>

            <div class="dashboard-card users">
                <div class="card-header">
                    <div class="card-icon users">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="card-info">
                        <h3>8,932</h3>
                        <p>Người dùng</p>
                    </div>
                </div>
                <div class="card-actions">
                    <a href="@Url.Action("Index", "Users", new { area = "Admin" })" class="card-link">
                        Quản lý user <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>

            <div class="dashboard-card reviews">
                <div class="card-header">
                    <div class="card-icon reviews">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="card-info">
                        <h3>15,643</h3>
                        <p>Đánh giá</p>
                    </div>
                </div>
                <div class="card-actions">
                    <a href="#" class="card-link">
                        Xem đánh giá <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>

            <div class="dashboard-card views">
                <div class="card-header">
                    <div class="card-icon views">
                        <i class="fas fa-eye"></i>
                    </div>
                    <div class="card-info">
                        <h3>2.1M</h3>
                        <p>Lượt xem</p>
                    </div>
                </div>
                <div class="card-actions">
                    <a href="#" class="card-link">
                        Thống kê xem <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Quick Actions -->
            <div class="col-lg-8">
                <div class="quick-actions">
                    <h4>
                        <i class="fas fa-bolt text-warning me-2"></i>
                        Thao tác nhanh
                    </h4>
                    <div class="action-buttons">
                        <a href="@Url.Action("Create", "Phim", new { area = "" })" class="action-btn">
                            <i class="fas fa-plus-circle"></i>
                            <div>
                                <div class="fw-bold">Thêm phim mới</div>
                                <small>Thêm phim vào hệ thống</small>
                            </div>
                        </a>
                        <a href="@Url.Action("Movies", "SimpleAdmin", new { area = "Admin" })" class="action-btn">
                            <i class="fas fa-list"></i>
                            <div>
                                <div class="fw-bold">Quản lý phim</div>
                                <small>Xem danh sách tất cả phim</small>
                            </div>
                        </a>
                        <a href="@Url.Action("Index", "Users", new { area = "Admin" })" class="action-btn">
                            <i class="fas fa-user-cog"></i>
                            <div>
                                <div class="fw-bold">Quản lý user</div>
                                <small>Quản lý tài khoản người dùng</small>
                            </div>
                        </a>
                        <a href="#" class="action-btn">
                            <i class="fas fa-chart-line"></i>
                            <div>
                                <div class="fw-bold">Thống kê</div>
                                <small>Xem báo cáo và thống kê</small>
                            </div>
                        </a>
                        <a href="#" class="action-btn">
                            <i class="fas fa-database"></i>
                            <div>
                                <div class="fw-bold">Sao lưu dữ liệu</div>
                                <small>Backup hệ thống</small>
                            </div>
                        </a>
                        <a href="#" class="action-btn">
                            <i class="fas fa-cog"></i>
                            <div>
                                <div class="fw-bold">Cài đặt</div>
                                <small>Cấu hình hệ thống</small>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="recent-activity">
                    <h4>
                        <i class="fas fa-clock text-info me-2"></i>
                        Hoạt động gần đây
                    </h4>
                    <div class="activity-item">
                        <div class="activity-icon" style="background: #2ecc71;">
                            <i class="fas fa-plus"></i>
                        </div>
                        <div class="activity-content">
                            <div class="activity-title">Thêm phim mới "Spider-Man: No Way Home"</div>
                            <div class="activity-time">2 giờ trước</div>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon" style="background: #3498db;">
                            <i class="fas fa-edit"></i>
                        </div>
                        <div class="activity-content">
                            <div class="activity-title">Cập nhật thông tin phim "Avengers: Endgame"</div>
                            <div class="activity-time">4 giờ trước</div>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon" style="background: #f39c12;">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="activity-content">
                            <div class="activity-title">Người dùng mới đăng ký: user123@gmail.com</div>
                            <div class="activity-time">6 giờ trước</div>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon" style="background: #e74c3c;">
                            <i class="fas fa-trash"></i>
                        </div>
                        <div class="activity-content">
                            <div class="activity-title">Xóa phim "Old Movie Title"</div>
                            <div class="activity-time">1 ngày trước</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Status -->
            <div class="col-lg-4">
                <div class="system-status">
                    <h4>
                        <i class="fas fa-server text-success me-2"></i>
                        Trạng thái hệ thống
                    </h4>
                    <div class="status-item">
                        <span>Server Web</span>
                        <span class="status-badge online">
                            <i class="fas fa-check me-1"></i>
                            Hoạt động
                        </span>
                    </div>
                    <div class="status-item">
                        <span>Cơ sở dữ liệu</span>
                        <span class="status-badge online">
                            <i class="fas fa-check me-1"></i>
                            Hoạt động
                        </span>
                    </div>
                    <div class="status-item">
                        <span>Dung lượng đĩa</span>
                        <span class="status-badge warning">
                            <i class="fas fa-exclamation me-1"></i>
                            78% đã sử dụng
                        </span>
                    </div>
                    <div class="status-item">
                        <span>Bộ nhớ RAM</span>
                        <span class="status-badge online">
                            <i class="fas fa-check me-1"></i>
                            62% đã sử dụng
                        </span>
                    </div>
                    <div class="status-item">
                        <span>CDN</span>
                        <span class="status-badge online">
                            <i class="fas fa-check me-1"></i>
                            Hoạt động
                        </span>
                    </div>
                </div>

                <!-- Quick Stats -->
                <div class="system-status mt-3">
                    <h4>
                        <i class="fas fa-chart-pie text-primary me-2"></i>
                        Thống kê nhanh
                    </h4>
                    <div class="status-item">
                        <span>Phim mới hôm nay</span>
                        <span class="fw-bold text-success">+23</span>
                    </div>
                    <div class="status-item">
                        <span>User đăng ký hôm nay</span>
                        <span class="fw-bold text-info">+156</span>
                    </div>
                    <div class="status-item">
                        <span>Lượt xem hôm nay</span>
                        <span class="fw-bold text-warning">+8,492</span>
                    </div>
                    <div class="status-item">
                        <span>Đánh giá mới</span>
                        <span class="fw-bold text-primary">+341</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add some animations
            $('.dashboard-card').each(function(index) {
                $(this).delay(index * 100).animate({
                    opacity: 1
                }, 500);
            });

            // Refresh page every 5 minutes to update stats
            setTimeout(function() {
                location.reload();
            }, 300000); // 5 minutes
        });
    </script>
}
