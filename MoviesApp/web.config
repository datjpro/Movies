<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <security>
      <requestFiltering>
        <!-- Cho phép upload file lên đến 2GB -->
        <requestLimits maxAllowedContentLength="2147483648" />
      </requestFiltering>
    </security>
    <!-- Tăng timeout cho upload file lớn -->
    <httpProtocol>
      <customHeaders>
        <add name="Keep-Alive" value="timeout=300, max=1000" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>
