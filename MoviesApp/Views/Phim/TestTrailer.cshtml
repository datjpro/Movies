@{
    ViewData["Title"] = "Test Trailer";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Test Thêm Trailer (Tập 0)</h4>
                </div>
                <div class="card-body">
                    <form id="trailerForm">
                        <div class="mb-3">
                            <label for="phimId" class="form-label">Mã Phim</label>
                            <input type="text" class="form-control" id="phimId" placeholder="Nhập mã phim" required>
                        </div>
                        <div class="mb-3">
                            <label for="trailerUrl" class="form-label">URL Trailer</label>
                            <input type="text" class="form-control" id="trailerUrl" 
                                   placeholder="https://cc.animeheaven.me/video.mp4?cb031d16e20fa6ec8597feaad965bff4&9506c36ab9054f11ccb038a35060dae9"
                                   required>
                        </div>
                        <div class="mb-3">
                            <label for="trailerTitle" class="form-label">Tiêu đề Trailer</label>
                            <input type="text" class="form-control" id="trailerTitle" value="Trailer" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Thêm Trailer</button>
                    </form>
                    
                    <div id="result" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('trailerForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const phimId = document.getElementById('phimId').value;
    const trailerUrl = document.getElementById('trailerUrl').value;
    const trailerTitle = document.getElementById('trailerTitle').value;
    
    fetch('@Url.Action("AddTrailer", "Phim")', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
        },
        body: `phimId=${encodeURIComponent(phimId)}&trailerUrl=${encodeURIComponent(trailerUrl)}&trailerTitle=${encodeURIComponent(trailerTitle)}`
    })
    .then(response => response.json())
    .then(data => {
        const resultDiv = document.getElementById('result');
        if (data.success) {
            resultDiv.innerHTML = `<div class="alert alert-success">${data.message}</div>`;
            // Tạo link để xem trailer
            const trailerLink = `@Url.Action("Details", "Phim")?id=${phimId}&episode=0`;
            resultDiv.innerHTML += `<div class="mt-2"><a href="${trailerLink}" class="btn btn-success">Xem Trailer</a></div>`;
        } else {
            resultDiv.innerHTML = `<div class="alert alert-danger">${data.message}</div>`;
        }
    })
    .catch(error => {
        document.getElementById('result').innerHTML = `<div class="alert alert-danger">Lỗi: ${error.message}</div>`;
    });
});
</script>
