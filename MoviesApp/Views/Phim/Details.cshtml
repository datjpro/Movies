@model MoviesApp.Models.Phim

@{
    ViewData["Title"] = Model.TenPhim + " - Chi tiết phim";
    Layout = "_Layout";
}

@* Hidden CSRF token for admin delete functionality *@
@Html.AntiForgeryToken()

<div class="movie-details-page">
    <!-- Hero Section -->
    <section class="movie-hero" style="background-image: linear-gradient(rgba(10,10,11,0.85), rgba(10,10,11,0.95)), url('@(Model.AnhPhim ?? "/images/hero-bg.jpg")');">
        <div class="container">
            <div class="row align-items-center py-5">
                <!-- Left Side - Additional Poster -->
                <div class="col-lg-2 col-md-3 d-none d-md-block">
                    <div class="floating-poster-container">
                        <div class="floating-poster">
                            <img src="@(Model.AnhPhim ?? "/images/no-image.jpg")" 
                                 alt="@Model.TenPhim Poster" 
                                 class="floating-poster-img"
                                 onerror="this.src='/images/no-image.jpg'">
                            <div class="poster-glow"></div>
                        </div>
                        @if (Model.DiemImdb.HasValue)
                        {
                            <div class="rating-badge">
                                <div class="rating-score">@Model.DiemImdb.Value.ToString("F1")</div>
                                <div class="rating-label">IMDb</div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Main Poster -->
                <div class="col-lg-3 col-md-4">
                    <div class="main-poster-container">
                        <img src="@(Model.AnhPhim ?? "/images/no-image.jpg")" 
                             alt="@Model.TenPhim" 
                             class="main-poster"
                             onerror="this.src='/images/no-image.jpg'">
                    </div>
                </div>

                <!-- Movie Info -->
                <div class="col-lg-7 col-md-5">
                    <div class="movie-info">
                        <h1 class="movie-title">@Model.TenPhim</h1>
                        
                        <div class="movie-meta">
                            @if (Model.NamPhatHanh.HasValue)
                            {
                                <span class="meta-item">
                                    <i class="fas fa-calendar"></i>
                                    @Model.NamPhatHanh
                                </span>
                            }
                            @if (Model.ThoiLuongPhim.HasValue)
                            {
                                <span class="meta-item">
                                    <i class="fas fa-clock"></i>
                                    @Model.ThoiLuongPhim phút
                                </span>
                            }
                            @if (Model.TheLoaiPhim != null)
                            {
                                <span class="meta-item">
                                    <i class="fas fa-theater-masks"></i>
                                    @Model.TheLoaiPhim.TenTL
                                </span>
                            }
                            @if (Model.QuocGia != null)
                            {
                                <span class="meta-item">
                                    <i class="fas fa-globe"></i>
                                    @Model.QuocGia.TenQG
                                </span>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(Model.MoTaPhim))
                        {
                            <div class="movie-description">
                                <p>@Model.MoTaPhim</p>
                            </div>
                        }                        <div class="action-buttons">
                            <button class="btn btn-primary btn-lg">
                                <i class="fas fa-play"></i>
                                Xem Phim
                            </button>
                            <button class="btn btn-secondary btn-lg">
                                <i class="fas fa-heart"></i>
                                Yêu Thích
                            </button>
                            <button class="btn btn-outline-light btn-lg">
                                <i class="fas fa-share"></i>
                                Chia Sẻ
                            </button>
                            
                            @* Admin Controls - Only show for admin users *@
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="admin-controls mt-3">
                                    <hr class="admin-divider">
                                    <h6 class="admin-controls-title">
                                        <i class="fas fa-shield-alt"></i>
                                        Quản lý Admin
                                    </h6>
                                    <div class="admin-buttons">
                                        <a asp-action="Edit" asp-route-id="@Model.MaPhim" class="btn btn-warning btn-lg admin-btn">
                                            <i class="fas fa-edit"></i>
                                            Chỉnh Sửa
                                        </a>
                                        <button type="button" class="btn btn-danger btn-lg admin-btn" 
                                                onclick="confirmDelete('@Model.MaPhim', '@Model.TenPhim')">
                                            <i class="fas fa-trash-alt"></i>
                                            Xóa Phim
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Details Section -->
    <section class="movie-details-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="details-card">
                        <h3><i class="fas fa-info-circle"></i> Thông Tin Phim</h3>
                        
                        @if (!string.IsNullOrEmpty(Model.MoTaPhim))
                        {
                            <div class="detail-section">
                                <h4>Nội dung phim</h4>
                                <p>@Model.MoTaPhim</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.DaoDien))
                        {
                            <div class="detail-section">
                                <h4>Đạo diễn</h4>
                                <p>@Model.DaoDien</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.DienVien))
                        {
                            <div class="detail-section">
                                <h4>Diễn viên</h4>
                                <p>@Model.DienVien</p>
                            </div>
                        }
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="details-sidebar">
                        <div class="details-card">
                            <h4><i class="fas fa-list"></i> Chi Tiết</h4>
                            <div class="detail-list">
                                @if (Model.NamPhatHanh.HasValue)
                                {
                                    <div class="detail-item">
                                        <span class="label">Năm phát hành:</span>
                                        <span class="value">@Model.NamPhatHanh</span>
                                    </div>
                                }
                                @if (Model.ThoiLuongPhim.HasValue)
                                {
                                    <div class="detail-item">
                                        <span class="label">Thời lượng:</span>
                                        <span class="value">@Model.ThoiLuongPhim phút</span>
                                    </div>
                                }
                                @if (Model.TheLoaiPhim != null)
                                {
                                    <div class="detail-item">
                                        <span class="label">Thể loại:</span>
                                        <span class="value">@Model.TheLoaiPhim.TenTL</span>
                                    </div>
                                }
                                @if (Model.QuocGia != null)
                                {
                                    <div class="detail-item">
                                        <span class="label">Quốc gia:</span>
                                        <span class="value">@Model.QuocGia.TenQG</span>
                                    </div>
                                }
                                @if (Model.DiemImdb.HasValue)
                                {
                                    <div class="detail-item">
                                        <span class="label">Điểm IMDb:</span>
                                        <span class="value">@Model.DiemImdb.Value.ToString("F1")/10</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
/* Movie Details Page Styles */
.movie-details-page {
    color: var(--text-primary, #E0E0E0);
    min-height: 100vh;
}

/* Hero Section */
.movie-hero {
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    min-height: 70vh;
    position: relative;
    display: flex;
    align-items: center;
}

/* Floating Poster */
.floating-poster-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
}

.floating-poster {
    position: relative;
    animation: float 3s ease-in-out infinite;
}

.floating-poster-img {
    width: 140px;
    height: 200px;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    border: 2px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
}

.floating-poster:hover .floating-poster-img {
    transform: scale(1.05);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
}

.poster-glow {
    position: absolute;
    top: -5px;
    left: -5px;
    right: -5px;
    bottom: -5px;
    background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4);
    border-radius: 15px;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
    filter: blur(10px);
}

.floating-poster:hover .poster-glow {
    opacity: 0.7;
}

/* Rating Badge */
.rating-badge {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 50%;
    width: 80px;
    height: 80px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    border: 3px solid rgba(255, 255, 255, 0.2);
}

.rating-score {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    line-height: 1;
}

.rating-label {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* Main Poster */
.main-poster-container {
    text-align: center;
}

.main-poster {
    width: 100%;
    max-width: 280px;
    height: auto;
    border-radius: 15px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
    transition: all 0.3s ease;
}

.main-poster:hover {
    transform: translateY(-5px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
}

/* Movie Info */
.movie-info {
    padding-left: 2rem;
}

.movie-title {
    font-size: 3rem;
    font-weight: 800;
    color: var(--text-primary, #E0E0E0);
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.movie-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

.meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-secondary, #B0B0B0);
}

.meta-item i {
    color: var(--accent-blue, #004D61);
}

.movie-description {
    margin-bottom: 2rem;
}

.movie-description p {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--text-secondary, #B0B0B0);
}

/* Action Buttons */
.action-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
}

.btn-primary {
    background: linear-gradient(135deg, var(--accent-blue, #004D61), var(--accent-purple, #822659));
    color: white;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(0, 77, 97, 0.3);
}

.btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-primary, #E0E0E0);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
}

.btn-outline-light {
    background: transparent;
    color: var(--text-primary, #E0E0E0);
    border: 2px solid rgba(255, 255, 255, 0.3);
}

.btn-outline-light:hover {
    background: rgba(255, 255, 255, 0.1);
}

/* Admin Controls */
.admin-controls {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.admin-divider {
    border-color: rgba(255, 255, 255, 0.1);
    margin: 1rem 0;
}

.admin-controls-title {
    color: var(--accent-orange, #FFB800);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.admin-controls-title i {
    color: var(--accent-orange, #FFB800);
}

.admin-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.admin-btn {
    min-width: 150px;
    justify-content: center;
}

.btn-warning {
    background: linear-gradient(135deg, var(--accent-orange, #FFB800), #ff9500);
    color: white;
    border: none;
}

.btn-warning:hover {
    background: linear-gradient(135deg, #ff9500, #e6850e);
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(255, 184, 0, 0.3);
}

.btn-danger {
    background: linear-gradient(135deg, #dc3545, #c82333);
    color: white;
    border: none;
}

.btn-danger:hover {
    background: linear-gradient(135deg, #c82333, #bd2130);
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(220, 53, 69, 0.3);
}

/* Details Content */
.movie-details-content {
    padding: 4rem 0;
    background: var(--secondary-bg, #1A1A1C);
}

.details-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 15px;
    padding: 2rem;
    margin-bottom: 2rem;
    backdrop-filter: blur(20px);
}

.details-card h3,
.details-card h4 {
    color: var(--text-primary, #E0E0E0);
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.details-card h3 i,
.details-card h4 i {
    color: var(--accent-blue, #004D61);
}

.detail-section {
    margin-bottom: 2rem;
}

.detail-section h4 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
}

.detail-section p {
    color: var(--text-secondary, #B0B0B0);
    line-height: 1.6;
}

/* Details List */
.detail-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.detail-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.detail-item:last-child {
    border-bottom: none;
}

.detail-item .label {
    font-weight: 600;
    color: var(--text-primary, #E0E0E0);
}

.detail-item .value {
    color: var(--text-secondary, #B0B0B0);
}

/* Animations */
@@keyframes float {
    0%, 100% {
        transform: translateY(0px);
    }
    50% {
        transform: translateY(-10px);
    }
}

/* Responsive */
@@media (max-width: 768px) {
    .movie-title {
        font-size: 2rem;
    }
    
    .movie-info {
        padding-left: 0;
        text-align: center;
        margin-top: 2rem;
    }
    
    .movie-meta {
        justify-content: center;
    }
    
    .action-buttons {
        justify-content: center;
    }
    
    .floating-poster-container {
        display: none;
    }
}

@@media (max-width: 576px) {
    .movie-title {
        font-size: 1.5rem;
    }
    
    .action-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .admin-buttons {
        flex-direction: column;
        width: 100%;
    }
    
    .admin-btn {
        width: 100%;
        max-width: 300px;
    }
    
    .btn {
        width: 100%;
        max-width: 300px;
    }
}
</style>

<script>
// Confirm delete function
function confirmDelete(phimId, tenPhim) {
    if (confirm(`Bạn có chắc chắn muốn xóa phim "${tenPhim}"?\n\nHành động này không thể hoàn tác!`)) {
        // Create form and submit to delete action
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '@Url.Action("Delete", "Phim")/' + phimId;
        
        // Add CSRF token
        const token = document.querySelector('input[name="__RequestVerificationToken"]');
        if (token) {
            const hiddenToken = document.createElement('input');
            hiddenToken.type = 'hidden';
            hiddenToken.name = '__RequestVerificationToken';
            hiddenToken.value = token.value;
            form.appendChild(hiddenToken);
        }
        
        document.body.appendChild(form);
        form.submit();
    }
}

// Add smooth scroll for admin section
document.addEventListener('DOMContentLoaded', function() {
    const adminControls = document.querySelector('.admin-controls');
    if (adminControls) {
        adminControls.style.opacity = '0';
        adminControls.style.transform = 'translateY(20px)';
        adminControls.style.transition = 'all 0.5s ease';
        
        setTimeout(() => {
            adminControls.style.opacity = '1';
            adminControls.style.transform = 'translateY(0)';
        }, 300);
    }
});
</script>
