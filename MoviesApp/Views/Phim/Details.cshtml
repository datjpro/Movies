@section Scripts {
    <script>
        // Load movie details from API
        async function loadMovieFromAPI(movieId) {
            try {
                const response = await fetch(`/api/PhimApi/${movieId}`);
                if (response.ok) {
                    const movie = await response.json();
                    updateMovieDetails(movie);
                }
            } catch (error) {
                console.error('Error loading movie from API:', error);
            }
        }

        function updateMovieDetails(movie) {
            // Update various elements with API data if available
            if (movie.anhPhim) {
                document.querySelector('.movie-poster').src = movie.anhPhim;
            }
            // Add more updates as needed
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Initialize movie details page
            const movieId = @Model.MaPhim;
            
            // Add smooth scrolling for internal links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });            // Add loading animation
            document.querySelector('.movie-poster').addEventListener('load', function() {
                this.classList.add('loaded');
            });

            // Initialize video player
            initializeVideoPlayer();
        });

        // Video Player Functions
        function initializeVideoPlayer() {
            // Create video player modal if it doesn't exist
            if (!document.querySelector('.video-player-modal')) {
                const modalHTML = `
                    <div class="video-player-modal" id="videoPlayerModal">
                        <div class="video-player-container">
                            <div class="video-player-header">
                                <h5 class="text-white mb-0" id="videoPlayerTitle">Đang phát</h5>
                                <button class="video-player-close" onclick="closeVideoPlayer()">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <video id="videoPlayer" controls controlsList="nodownload">
                                Trình duyệt của bạn không hỗ trợ video HTML5.
                            </video>
                        </div>
                    </div>
                `;
                document.body.insertAdjacentHTML('beforeend', modalHTML);
            }
        }

        function playEpisode(videoUrl, episodeTitle = 'Tập phim') {
            const modal = document.getElementById('videoPlayerModal');
            const video = document.getElementById('videoPlayer');
            const title = document.getElementById('videoPlayerTitle');
            
            if (modal && video) {
                video.src = videoUrl;
                title.textContent = episodeTitle;
                modal.style.display = 'flex';
                
                // Pause video when modal is closed
                video.play().catch(console.error);
            }
        }

        function closeVideoPlayer() {
            const modal = document.getElementById('videoPlayerModal');
            const video = document.getElementById('videoPlayer');
            
            if (modal && video) {
                video.pause();
                video.src = '';
                modal.style.display = 'none';
            }
        }

        // Close video player when clicking outside
        document.addEventListener('click', function(e) {
            const modal = document.getElementById('videoPlayerModal');
            if (e.target === modal) {
                closeVideoPlayer();
            }
        });        // Close video player with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeVideoPlayer();
            }
        });

        // Convert YouTube/video URLs to appropriate format
        function convertVideoUrl(url) {
            if (!url) return '';
            
            // YouTube watch URL to embed URL
            if (url.includes('youtube.com/watch?v=')) {
                const videoId = url.split('v=')[1].split('&')[0];
                return `https://www.youtube.com/embed/${videoId}`;
            }
            
            // YouTube short URL to embed URL
            if (url.includes('youtu.be/')) {
                const videoId = url.split('youtu.be/')[1].split('?')[0];
                return `https://www.youtube.com/embed/${videoId}`;
            }
            
            // YouTube embed URL (already correct)
            if (url.includes('youtube.com/embed/')) {
                return url;
            }
            
            // Vimeo URL conversion
            if (url.includes('vimeo.com/')) {
                const videoId = url.split('vimeo.com/')[1].split('?')[0];
                return `https://player.vimeo.com/video/${videoId}`;
            }
            
            // Direct video files (mp4, webm, etc.)
            if (url.match(/\.(mp4|webm|ogg|avi|mov)(\?|$)/i)) {
                return url;
            }
            
            // Default: assume it's a direct video URL
            return url;
        }

        function getVideoType(url) {
            if (url.includes('youtube.com') || url.includes('youtu.be')) {
                return 'youtube';
            }
            if (url.includes('vimeo.com')) {
                return 'vimeo';
            }
            return 'direct';
        }

        // Fullscreen functionality for embedded video
        function toggleFullscreen() {
            const video = document.getElementById('mainVideoPlayer');
            if (video) {
                if (video.requestFullscreen) {
                    video.requestFullscreen();
                } else if (video.webkitRequestFullscreen) {
                    video.webkitRequestFullscreen();
                } else if (video.msRequestFullscreen) {
                    video.msRequestFullscreen();
                }
            }
        }

        // Video player keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            const video = document.getElementById('mainVideoPlayer');
            if (video && document.activeElement !== video) return;
            
            switch(e.code) {
                case 'Space':
                    e.preventDefault();
                    if (video.paused) {
                        video.play();
                    } else {
                        video.pause();
                    }
                    break;
                case 'ArrowLeft':
                    e.preventDefault();
                    video.currentTime -= 10;
                    break;
                case 'ArrowRight':
                    e.preventDefault();
                    video.currentTime += 10;
                    break;
                case 'ArrowUp':
                    e.preventDefault();
                    video.volume = Math.min(1, video.volume + 0.1);
                    break;
                case 'ArrowDown':
                    e.preventDefault();
                    video.volume = Math.max(0, video.volume - 0.1);
                    break;
                case 'KeyM':
                    e.preventDefault();
                    video.muted = !video.muted;
                    break;
                case 'KeyF':
                    e.preventDefault();
                    toggleFullscreen();
                    break;
            }        });

        // Auto-scroll to video player when episode is selected
        @{
            if (ViewBag.SelectedEpisode != null)
            {
                <text>
                document.addEventListener('DOMContentLoaded', function() {
                    const videoSection = document.querySelector('.video-player-section');
                    if (videoSection) {
                        videoSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }
                });
                </text>
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Enhanced Video Player Support
            const videoPlayer = document.getElementById('mainVideoPlayer');
            
            if (videoPlayer) {
                // Handle video loading errors
                if (videoPlayer.tagName === 'VIDEO') {
                    videoPlayer.addEventListener('error', function(e) {
                        console.log('Video error:', e);
                        handleVideoError(videoPlayer, e);
                    });
                    
                    videoPlayer.addEventListener('loadstart', function() {
                        videoPlayer.parentElement.classList.add('video-loading');
                    });
                    
                    videoPlayer.addEventListener('loadeddata', function() {
                        videoPlayer.parentElement.classList.remove('video-loading');
                    });
                    
                    // Handle video can't play due to CORS or other issues
                    videoPlayer.addEventListener('canplay', function() {
                        videoPlayer.parentElement.classList.remove('video-loading');
                    });
                    
                    // Try to load video with different approaches if initial fails
                    const sources = videoPlayer.querySelectorAll('source');
                    sources.forEach((source, index) => {
                        source.addEventListener('error', function() {
                            console.log(`Source ${index} failed:`, source.src);
                            if (index === sources.length - 1) {
                                // Last source failed, try alternative approaches
                                tryAlternativeVideoLoad(videoPlayer, source.src);
                            }
                        });
                    });
                }
                
                // Handle iframe loading errors
                if (videoPlayer.tagName === 'IFRAME') {
                    videoPlayer.addEventListener('error', function() {
                        console.log('Iframe error');
                        handleIframeError(videoPlayer);
                    });
                }
            }
            
            function handleVideoError(video, error) {
                const container = video.parentElement;
                const videoUrl = video.querySelector('source') ? video.querySelector('source').src : video.src;
                
                // Create error fallback
                const fallback = document.createElement('div');
                fallback.className = 'video-error-fallback';
                fallback.innerHTML = `
                    <i class="fas fa-exclamation-triangle"></i>
                    <h5>Không thể phát video</h5>
                    <p>Video có thể bị hạn chế truy cập hoặc định dạng không được hỗ trợ.</p>
                    <a href="${videoUrl}" target="_blank" class="btn btn-outline-primary btn-sm mt-2">
                        <i class="fas fa-external-link-alt me-1"></i>
                        Mở video trong tab mới
                    </a>
                `;
                
                container.replaceChild(fallback, video);
            }
            
            function handleIframeError(iframe) {
                const container = iframe.parentElement;
                const iframeSrc = iframe.src;
                
                const fallback = document.createElement('div');
                fallback.className = 'video-error-fallback';
                fallback.innerHTML = `
                    <i class="fas fa-video-slash"></i>
                    <h5>Không thể tải video</h5>
                    <p>Video có thể bị hạn chế nhúng hoặc liên kết không còn hoạt động.</p>
                    <a href="${iframeSrc}" target="_blank" class="btn btn-outline-primary btn-sm mt-2">
                        <i class="fas fa-external-link-alt me-1"></i>
                        Xem video gốc
                    </a>
                `;
                
                container.replaceChild(fallback, iframe);
            }
            
            function tryAlternativeVideoLoad(video, originalUrl) {
                // Try different approaches for complex URLs
                console.log('Trying alternative video load for:', originalUrl);
                
                // Method 1: Try with different headers via fetch
                if (originalUrl.includes('.mp4') && originalUrl.includes('?')) {
                    tryFetchVideo(video, originalUrl);
                }
            }
            
            function tryFetchVideo(video, url) {
                // This is a fallback method - just show error message for now
                // In production, you might want to use a proxy server or different approach
                console.log('Complex URL detected:', url);
                
                // For now, let the browser handle it as-is
                // The crossorigin="anonymous" attribute should help with CORS
                video.setAttribute('crossorigin', 'anonymous');
                
                // Try to reload
                video.load();
            }
        });

    </script>
}

