    <script>
    // Modern 2025 Navigation System
    class ModernNavigation {
        constructor() {
            this.navbar = document.getElementById('mainNavbar');
            this.mobileMenu = document.getElementById('mobileMenu');
            this.searchPopup = document.getElementById('searchPopup');
            this.init();
        }

        init() {
            this.setupScrollEffects();
            this.setupDropdowns();
            this.setupMobileMenu();
            this.setupSearch();
            this.setupScrollToTop();
        }

        // Navbar scroll effects
        setupScrollEffects() {
            let lastScrollY = window.scrollY;
            let ticking = false;

            const updateNavbar = () => {
                const scrollY = window.scrollY;
                
                if (scrollY > 100) {
                    this.navbar.classList.add('scrolled');
                } else {
                    this.navbar.classList.remove('scrolled');
                }

                if (scrollY > lastScrollY && scrollY > 200) {
                    this.navbar.classList.add('hidden');
                } else {
                    this.navbar.classList.remove('hidden');
                }

                lastScrollY = scrollY;
                ticking = false;
            };

            const requestTick = () => {
                if (!ticking) {
                    requestAnimationFrame(updateNavbar);
                    ticking = true;
                }
            };

            window.addEventListener('scroll', requestTick, { passive: true });
        }

        // Modern dropdown system
        setupDropdowns() {
            const dropdownTriggers = document.querySelectorAll('.dropdown-trigger');
            
            dropdownTriggers.forEach(trigger => {
                const dropdown = trigger.nextElementSibling;
                let timeout;

                trigger.addEventListener('mouseenter', () => {
                    clearTimeout(timeout);
                    dropdown.classList.add('show');
                });

                trigger.addEventListener('mouseleave', () => {
                    timeout = setTimeout(() => {
                        dropdown.classList.remove('show');
                    }, 200);
                });

                dropdown.addEventListener('mouseenter', () => {
                    clearTimeout(timeout);
                });

                dropdown.addEventListener('mouseleave', () => {
                    dropdown.classList.remove('show');
                });
            });
        }

        // Mobile menu functionality
        setupMobileMenu() {
            const mobileToggle = document.getElementById('mobileMenuToggle');
            const mobileClose = document.getElementById('mobileMenuClose');

            mobileToggle.addEventListener('click', () => {
                this.mobileMenu.classList.add('active');
                document.body.classList.add('mobile-menu-open');
            });

            mobileClose.addEventListener('click', () => {
                this.mobileMenu.classList.remove('active');
                document.body.classList.remove('mobile-menu-open');
            });

            // Close on overlay click
            this.mobileMenu.addEventListener('click', (e) => {
                if (e.target === this.mobileMenu) {
                    this.mobileMenu.classList.remove('active');
                    document.body.classList.remove('mobile-menu-open');
                }
            });
        }

        // Advanced search functionality
        setupSearch() {
            const searchToggle = document.getElementById('searchToggle');
            const searchInput = document.getElementById('searchInput');
            const searchSubmit = document.getElementById('searchSubmit');
            const searchSuggestions = document.getElementById('searchSuggestions');

            searchToggle.addEventListener('click', () => {
                this.searchPopup.classList.toggle('active');
                if (this.searchPopup.classList.contains('active')) {
                    setTimeout(() => searchInput.focus(), 100);
                }
            });

            // Live search suggestions
            let searchTimeout;
            searchInput.addEventListener('input', (e) => {
                clearTimeout(searchTimeout);
                const query = e.target.value.trim();
                
                if (query.length > 2) {
                    searchTimeout = setTimeout(() => {
                        this.performSearch(query);
                    }, 300);
                } else {
                    searchSuggestions.innerHTML = '';
                }
            });

            searchSubmit.addEventListener('click', () => {
                this.executeSearch(searchInput.value);
            });

            searchInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    this.executeSearch(searchInput.value);
                }
            });

            // Close search on outside click
            document.addEventListener('click', (e) => {
                if (!this.searchPopup.contains(e.target) && !searchToggle.contains(e.target)) {
                    this.searchPopup.classList.remove('active');
                }
            });
        }

        async performSearch(query) {
            try {
                const response = await fetch(`/api/PhimApi/search?query=${encodeURIComponent(query)}&limit=5`);
                const results = await response.json();
                this.displaySearchSuggestions(results);
            } catch (error) {
                console.error('Search error:', error);
            }
        }

        displaySearchSuggestions(results) {
            const suggestions = document.getElementById('searchSuggestions');
            
            if (results.length === 0) {
                suggestions.innerHTML = '<div class="no-results">Không tìm thấy kết quả</div>';
                return;
            }

            const html = results.map(movie => `
                <div class="search-suggestion" onclick="window.location.href='/Phim/Details/${movie.maPhim}'">
                    <img src="${movie.anhPhim || '/images/no-image.jpg'}" alt="${movie.tenPhim}" class="suggestion-poster">
                    <div class="suggestion-info">
                        <h4>${movie.tenPhim}</h4>
                        <p>${movie.namPhatHanh || 'N/A'} • ${movie.diemImdb ? movie.diemImdb + '/10' : 'N/A'}</p>
                    </div>
                </div>
            `).join('');

            suggestions.innerHTML = html;
        }

        executeSearch(query) {
            if (query.trim()) {
                window.location.href = `/Phim?search=${encodeURIComponent(query)}`;
            }
        }

        // Scroll to top functionality
        setupScrollToTop() {
            const scrollToTopBtn = document.getElementById('scrollToTop');
            
            window.addEventListener('scroll', () => {
                if (window.scrollY > 300) {
                    scrollToTopBtn.classList.add('visible');
                } else {
                    scrollToTopBtn.classList.remove('visible');
                }
            });

            scrollToTopBtn.addEventListener('click', () => {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });
        }
    }

    // Initialize navigation when DOM is loaded
    document.addEventListener('DOMContentLoaded', () => {
        new ModernNavigation();
    });
    </script>

